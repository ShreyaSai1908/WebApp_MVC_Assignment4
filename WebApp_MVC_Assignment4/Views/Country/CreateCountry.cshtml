@model WebApp_MVC_Assignment4.Models.ViewModels.CreateCountryViewModel

<h4>Create Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCountry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListCityID" class="control-label"></label>
                <select asp-for="ListCityID" class="form-control">
                    @foreach (var item in Model.CityList)
                    {
                        <option value="@item.Id">@item.CityName @item.States</option>
                    }
                </select>
                <span asp-validation-for="ListCityID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowCountry">Back to List</a>
</div>

